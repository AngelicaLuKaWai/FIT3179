{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "2022 World Population Count by Continent",
  "data": {
    "url": "https://raw.githubusercontent.com/AngelicaLuKaWai/FIT3179/main/world_population.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "2022 Population",
          "as": "sum of 2022 Population by Continent"
        }
      ],
      "groupby": ["Continent"]
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "sum of 2022 Population by Continent",
      "type": "quantitative"
    },
    "color": {"field": "Continent", "type": "nominal"},
    "tooltip": [
      {"field": "sum of 2022 Population by Continent", "type": "quantitative"},
      {"field": "Continent", "type": "nominal", "title": "Continent"}
    ]
  },
  "config": {}
}